    <script>
        const valentines = [
            { emoji: 'üöÄ', text: '–° —Ç–æ–±–æ–π –ª—é–±–æ–π –ø—Ä–æ–µ–∫—Ç –≤–∑–ª–µ—Ç–∞–µ—Ç!' },
            { emoji: 'üíª', text: '–¢—ã ‚Äî –ª—É—á—à–∏–π —Ç–∏–º–ª–∏–¥ –≤ –≥–∞–ª–∞–∫—Ç–∏–∫–µ!' },
            { emoji: 'üé®', text: '–¢–≤–æ–π –∫—Ä–µ–∞—Ç–∏–≤ –ø—Ä–æ—Å—Ç–æ –∫–æ—Å–º–æ—Å!' },
            { emoji: 'üìä', text: '–° —Ç–≤–æ–µ–π –∞–Ω–∞–ª–∏—Ç–∏–∫–æ–π –≤—Å—ë –ø–æ–¥ –∫–æ–Ω—Ç—Ä–æ–ª–µ–º!' },
            { emoji: '‚ú®', text: '–¢–≤–æ–∏ –∏–¥–µ–∏ ‚Äî —á–∏—Å—Ç–∞—è –º–∞–≥–∏—è!' },
            { emoji: 'üî•', text: '–¢—ã –¥–µ–ª–∞–µ—à—å –æ–≥–Ω–µ–Ω–Ω—ã–π –∫–æ–Ω—Ç–µ–Ω—Ç!' },
            { emoji: '‚ö°', text: '–¢–≤–æ—è —Å–∫–æ—Ä–æ—Å—Ç—å —Ä–∞–±–æ—Ç—ã –≤–ø–µ—á–∞—Ç–ª—è–µ—Ç!' },
            { emoji: 'üéØ', text: '–¢—ã –≤—Å–µ–≥–¥–∞ –ø–æ–ø–∞–¥–∞–µ—à—å –≤ —Ü–µ–ª—å!' },
            { emoji: 'üí°', text: '–¢–≤–æ–∏ —Ä–µ—à–µ–Ω–∏—è –≥–µ–Ω–∏–∞–ª—å–Ω—ã!' },
            { emoji: 'üèÜ', text: '–° —Ç–æ–±–æ–π –º—ã —á–µ–º–ø–∏–æ–Ω—ã!' },
            { emoji: 'üé¨', text: '–¢–≤–æ–π –º–æ–Ω—Ç–∞–∂ ‚Äî —à–µ–¥–µ–≤—Ä!' },
            { emoji: 'üì±', text: '–õ—É—á—à–∏–π SMM-—â–∏–∫ –Ω–∞ —Å–≤–µ—Ç–µ!' },
            { emoji: 'üé™', text: '–¢—ã —Å–æ–∑–¥–∞—ë—à—å –Ω–∞—Å—Ç–æ—è—â–µ–µ —à–æ—É!' },
            { emoji: 'üåü', text: '–¢—ã –∑–≤–µ–∑–¥–∞ –Ω–∞—à–µ–≥–æ –∞–≥–µ–Ω—Ç—Å—Ç–≤–∞!' },
            { emoji: 'üé≠', text: '–¢–≤–æ—è –ø–æ–¥–∞—á–∞ ‚Äî –≤—ã—Å—à–∏–π –∫–ª–∞—Å—Å!' },
            { emoji: 'üé®', text: '–¢–≤–æ–π –¥–∏–∑–∞–π–Ω –≤–¥–æ—Ö–Ω–æ–≤–ª—è–µ—Ç –≤—Å–µ—Ö!' },
            { emoji: 'üíº', text: '–° —Ç–æ–±–æ–π —Ä–∞–±–æ—Ç–∞—Ç—å ‚Äî –æ–¥–Ω–æ —É–¥–æ–≤–æ–ª—å—Å—Ç–≤–∏–µ!' },
            { emoji: 'üéâ', text: '–¢—ã –¥–µ–ª–∞–µ—à—å –∫–∞–∂–¥—ã–π –¥–µ–Ω—å –ø—Ä–∞–∑–¥–Ω–∏–∫–æ–º!' },
            { emoji: 'üåà', text: '–¢—ã –¥–æ–±–∞–≤–ª—è–µ—à—å –∫—Ä–∞—Å–æ–∫ –≤ –Ω–∞—à–∏ –ø—Ä–æ–µ–∫—Ç—ã!' },
            { emoji: 'üí™', text: '–¢—ã ‚Äî —Å–∏–ª–∞ –Ω–∞—à–µ–π –∫–æ–º–∞–Ω–¥—ã!' }
        ];

        let currentValentine = null;
        let isSpinning = false;

        function getRandomValentine() {
            let newValentine;
            do {
                newValentine = valentines[Math.floor(Math.random() * valentines.length)];
            } while (newValentine === currentValentine && valentines.length > 1);
            currentValentine = newValentine;
            return newValentine;
        }

        function createHearts() {
            const heartsContainer = document.getElementById('hearts');
            for (let i = 0; i < 20; i++) {
                setTimeout(() => {
                    const heart = document.createElement('div');
                    heart.className = 'heart';
                    heart.textContent = '‚ù§Ô∏è';
                    heart.style.left = Math.random() * 100 + '%';
                    heart.style.animationDelay = Math.random() * 4 + 's';
                    heart.style.fontSize = (Math.random() * 15 + 20) + 'px';
                    heartsContainer.appendChild(heart);
                }, i * 150);
            }
        }

        function spin() {
            if (isSpinning) return;
            isSpinning = true;

            const reel = document.getElementById('reel');
            const refreshBtn = document.getElementById('refreshBtn');

            // Hide button
            refreshBtn.classList.remove('visible');

            // Clear existing cards
            reel.innerHTML = '';

            // Remove winner class from all cards
            const cards = reel.querySelectorAll('.card');
            cards.forEach(c => c.classList.remove('winner'));

            // Create cards
            const totalCards = 40;
            const winnerIndex = 20; // Middle position

            for (let i = 0; i < totalCards; i++) {
                const valentine = (i === winnerIndex) 
                    ? getRandomValentine() 
                    : valentines[Math.floor(Math.random() * valentines.length)];

                const card = document.createElement('div');
                card.className = 'card';
                card.innerHTML = `
                    <div class="card-emoji">${valentine.emoji}</div>
                    <div class="card-text">${valentine.text}</div>
                `;
                reel.appendChild(card);
            }

            // Reset position instantly
            reel.style.transition = 'none';
            reel.style.transform = 'translateX(0) translateY(-50%)';

            // Force reflow
            reel.offsetHeight;

            // Calculate winning position
            const cardWidth = window.innerWidth <= 768 ? (window.innerWidth <= 480 ? 160 : 200) : 250;
            const gap = 25;
            const cardAndGap = cardWidth + gap;
            
            // We want the winner card centered, so calculate offset
            const offset = winnerIndex * cardAndGap;

            // Start animation
            setTimeout(() => {
                reel.style.transition = 'transform 4s cubic-bezier(0.15, 0.5, 0.3, 1)';
                reel.style.transform = `translateX(-${offset}px) translateY(-50%)`;

                // After animation
                setTimeout(() => {
                    // Mark winner
                    const allCards = reel.querySelectorAll('.card');
                    if (allCards[winnerIndex]) {
                        allCards[winnerIndex].classList.add('winner');
                    }

                    // Show modal with winner
                    setTimeout(() => {
                        showModal();
                        refreshBtn.classList.add('visible');
                        isSpinning = false;
                    }, 500);
                }, 4000);
            }, 100);
        }

        function showModal() {
            const modal = document.getElementById('modalOverlay');
            const modalEmoji = document.getElementById('modalEmoji');
            const modalText = document.getElementById('modalText');

            modalEmoji.textContent = currentValentine.emoji;
            modalText.textContent = currentValentine.text;

            modal.classList.add('visible');
        }

        function closeModal() {
            const modal = document.getElementById('modalOverlay');
            modal.classList.remove('visible');
        }

        function startGame() {
            document.getElementById('welcomeScreen').classList.add('hidden');
            document.getElementById('caseOpening').classList.remove('hidden');
            spin();
        }

        document.getElementById('openBtn').addEventListener('click', startGame);
        document.getElementById('refreshBtn').addEventListener('click', () => {
            closeModal();
            setTimeout(spin, 300);
        });
        document.getElementById('modalClose').addEventListener('click', closeModal);
        document.getElementById('modalOverlay').addEventListener('click', (e) => {
            if (e.target.id === 'modalOverlay') {
                closeModal();
            }
        });

        createHearts();
    </script>
</body>
